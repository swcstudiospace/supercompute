FROM python:3.11-slim

WORKDIR /app

# Install dependencies
COPY requirements.txt .
RUN pip install --no-cache-dir -r requirements.txt

# Copy monitoring code
COPY agents/claude_agent.py /app/agents/
COPY agents/gpt_synthesis.py /app/agents/
COPY monitoring/health_dashboard.py /app/monitoring/

# Create non-root user
RUN useradd -m -s /bin/bash -u monitor_user
USER monitor_user

# Expose port
EXPOSE 3001

# Health check
HEALTHCHECK --interval=30s --timeout=10s --start-period=40s \
  CMD curl -f http://localhost:3001/health || exit 1

# Run monitoring dashboard
CMD ["python", "-u", "monitor_user", "/app/monitoring/health_dashboard.py"]
