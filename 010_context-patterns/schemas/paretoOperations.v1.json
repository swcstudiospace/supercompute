{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://supercompute.me/schemas/pareto-operations/v1.0.0",
  "title": "Pareto-lang Operations Schema v1.0",
  "description": "Schema for Pareto-lang declarative operations in Context Patterns",
  "type": "object",
  "version": "1.0.0",
  
  "properties": {
    "paretoOperations": {
      "type": "object",
      "description": "Pareto-lang operations configuration and execution",
      "required": ["version", "syntax_version", "operation_categories", "operations"],
      "properties": {
        "version": {
          "type": "string",
          "const": "1.0.0",
          "description": "Pareto operations schema version"
        },
        
        "syntax_version": {
          "type": "string",
          "const": "1.0",
          "description": "Pareto-lang syntax version"
        },
        
        "operation_categories": {
          "type": "object",
          "description": "Pareto-lang operation categories",
          "required": ["information_management", "content_transformation", "analysis_insight", "field_operations", "memory_state"],
          "properties": {
            "information_management": {
              "type": "object",
              "description": "Information management operations",
              "properties": {
                "description": "Extract, filter, prioritize, and group information",
                "operations": ["extract", "filter", "prioritize", "group"],
                "xml_tags": ["<xml:extract>", "<xml:filter>", "<xml:prioritize>", "<xml:group>"]
              }
            },
            
            "content_transformation": {
              "type": "object",
              "description": "Content transformation operations",
              "properties": {
                "description": "Compress, expand, restructure, and format content",
                "operations": ["compress", "expand", "restructure", "format"],
                "xml_tags": ["<xml:compress>", "<xml:expand>", "<xml:restructure>", "<xml:format>"]
              }
            },
            
            "analysis_insight": {
              "type": "object",
              "description": "Analysis and insight generation operations",
              "properties": {
                "description": "Analyze, evaluate, compare, and synthesize insights",
                "operations": ["analyze", "evaluate", "compare", "synthesize"],
                "xml_tags": ["<xml:analyze>", "<xml:evaluate>", "<xml:compare>", "<xml:synthesize>"]
              }
            },
            
            "field_operations": {
              "type": "object",
              "description": "Field theory operations",
              "properties": {
                "description": "Attractor, boundary, resonance, and residue operations",
                "operations": ["attractor", "boundary", "resonance", "residue"],
                "xml_tags": ["<xml:attractor>", "<xml:boundary>", "<xml:resonance>", "<xml:residue>"]
              }
            },
            
            "memory_state": {
              "type": "object",
              "description": "Memory and state management operations",
              "properties": {
                "description": "Remember, forget, update, and retrieve information",
                "operations": ["remember", "forget", "update", "retrieve"],
                "xml_tags": ["<xml:remember>", "<xml:forget>", "<xml:update>", "<xml:retrieve>"]
              }
            }
          }
        },
        
        "operations": {
          "type": "object",
          "description": "Pareto-lang operation definitions",
          "patternProperties": {
            "^/[a-zA-Z][a-zA-Z0-9_]*\\.[a-zA-Z][a-zA-Z0-9_]*$": {
              "type": "object",
              "description": "Pareto-lang operation definition",
              "required": ["operation_name", "category", "syntax", "parameters", "examples"],
              "properties": {
                "operation_name": {
                  "type": "string",
                  "description": "Human-readable operation name"
                },
                
                "category": {
                  "type": "string",
                  "enum": ["information_management", "content_transformation", "analysis_insight", "field_operations", "memory_state"],
                  "description": "Operation category"
                },
                
                "syntax": {
                  "type": "string",
                  "pattern": "^/[a-zA-Z][a-zA-Z0-9_]*\\.[a-zA-Z][a-zA-Z0-9_]*\\{[^}]*\\}$",
                  "description": "Pareto-lang syntax pattern"
                },
                
                "description": {
                  "type": "string",
                  "description": "Operation description"
                },
                
                "parameters": {
                  "type": "object",
                  "description": "Operation parameters",
                  "patternProperties": {
                    "^[a-zA-Z][a-zA-Z0-9_]*$": {
                      "type": "object",
                      "description": "Parameter definition",
                      "required": ["type", "description"],
                      "properties": {
                        "type": {
                          "type": "string",
                          "enum": ["string", "number", "boolean", "array", "object"],
                          "description": "Parameter type"
                        },
                        "description": {
                          "type": "string",
                          "description": "Parameter description"
                        },
                        "required": {
                          "type": "boolean",
                          "description": "Whether parameter is required"
                        },
                        "default": {
                          "description": "Default parameter value"
                        },
                        "validation": {
                          "type": "object",
                          "description": "Parameter validation rules",
                          "properties": {
                            "pattern": {
                              "type": "string",
                              "description": "Regex pattern for string validation"
                            },
                            "min": {
                              "type": "number",
                              "description": "Minimum value for numbers"
                            },
                            "max": {
                              "type": "number",
                              "description": "Maximum value for numbers"
                            },
                            "enum": {
                              "type": "array",
                              "description": "Allowed values"
                            }
                          }
                        }
                      }
                    }
                  }
                },
                
                "examples": {
                  "type": "array",
                  "description": "Usage examples",
                  "items": {
                    "type": "object",
                    "required": ["description", "syntax"],
                    "properties": {
                      "description": {
                        "type": "string",
                        "description": "Example description"
                      },
                      "syntax": {
                        "type": "string",
                        "description": "Example syntax"
                      },
                      "context": {
                        "type": "string",
                        "description": "Example context"
                      },
                      "expected_output": {
                        "type": "string",
                        "description": "Expected output"
                      }
                    }
                  }
                },
                
                "performance": {
                  "type": "object",
                  "description": "Performance characteristics",
                  "properties": {
                    "complexity": {
                      "type": "string",
                      "enum": ["O(1)", "O(n)", "O(n log n)", "O(n^2)", "O(2^n)"],
                      "description": "Time complexity"
                    },
                    "space_complexity": {
                      "type": "string",
                      "enum": ["O(1)", "O(n)", "O(n log n)", "O(n^2)"],
                      "description": "Space complexity"
                    },
                    "parallelizable": {
                      "type": "boolean",
                      "description": "Whether operation is parallelizable"
                    },
                    "quantum_ready": {
                      "type": "boolean",
                      "description": "Whether operation supports quantum processing"
                    }
                  }
                },
                
                "integration": {
                  "type": "object",
                  "description": "Integration points",
                  "properties": {
                    "xml_transformation": {
                      "type": "boolean",
                      "description": "Whether operation integrates with XML transformations"
                    },
                    "baml_prompting": {
                      "type": "boolean",
                      "description": "Whether operation integrates with BAML prompting"
                    },
                    "symbolic_residue": {
                      "type": "boolean",
                      "description": "Whether operation integrates with symbolic residue"
                    },
                    "supercompute_protocol": {
                      "type": "boolean",
                      "description": "Whether operation integrates with Supercompute protocol"
                    }
                  }
                }
              }
            }
          }
        },
        
        "execution": {
          "type": "object",
          "description": "Pareto-lang execution configuration",
          "required": ["engine", "mode", "optimization"],
          "properties": {
            "engine": {
              "type": "object",
              "description": "Execution engine configuration",
              "required": ["type", "version"],
              "properties": {
                "type": {
                  "type": "string",
                  "enum": ["native", "external", "hybrid"],
                  "description": "Engine type"
                },
                "version": {
                  "type": "string",
                  "description": "Engine version"
                },
                "configuration": {
                  "type": "object",
                  "description": "Engine-specific configuration",
                  "properties": {
                    "optimization_level": {
                      "type": "string",
                      "enum": ["basic", "standard", "advanced", "quantum"],
                      "description": "Optimization level"
                    },
                    "parallel_execution": {
                      "type": "boolean",
                      "description": "Enable parallel execution"
                    },
                    "caching": {
                      "type": "object",
                      "description": "Caching configuration",
                      "properties": {
                        "enabled": {
                          "type": "boolean",
                          "description": "Enable caching"
                        },
                        "strategy": {
                          "type": "string",
                          "enum": ["lru", "lfu", "fifo"],
                          "description": "Caching strategy"
                        }
                      }
                    }
                  }
                }
              }
            },
            
            "mode": {
              "type": "string",
              "enum": ["sequential", "parallel", "quantum", "adaptive"],
              "description": "Execution mode"
            },
            
            "optimization": {
              "type": "object",
              "description": "Execution optimization settings",
              "properties": {
                "operation_ordering": {
                  "type": "string",
                  "enum": ["as_specified", "dependency_optimized", "performance_optimized"],
                  "description": "Operation ordering strategy"
                },
                "resource_allocation": {
                  "type": "object",
                  "description": "Resource allocation settings",
                  "properties": {
                    "cpu_cores": {
                      "type": "integer",
                      "minimum": 1,
                      "description": "CPU cores to allocate"
                    },
                    "memory_limit": {
                      "type": "string",
                      "pattern": "^[0-9]+[KMGT]?$",
                      "description": "Memory limit"
                    }
                  }
                },
                "quantum_optimization": {
                  "type": "object",
                  "description": "Quantum optimization settings",
                  "properties": {
                    "superposition_enabled": {
                      "type": "boolean",
                      "description": "Enable quantum superposition"
                    },
                    "entanglement_depth": {
                      "type": "integer",
                      "minimum": 1,
                      "maximum": 10,
                      "description": "Entanglement depth"
                    }
                  }
                }
              }
            },
            
            "error_handling": {
              "type": "object",
              "description": "Error handling configuration",
              "properties": {
                "strategy": {
                  "type": "string",
                  "enum": ["fail_fast", "continue_on_error", "retry", "fallback"],
                  "description": "Error handling strategy"
                },
                "retry_count": {
                  "type": "integer",
                  "minimum": 0,
                  "maximum": 10,
                  "description": "Number of retry attempts"
                },
                "fallback_operations": {
                  "type": "object",
                  "description": "Fallback operation mappings",
                  "patternProperties": {
                    "^[a-zA-Z][a-zA-Z0-9_]*$": {
                      "type": "string",
                      "description": "Fallback operation ID"
                    }
                  }
                }
              }
            }
          }
        },
        
        "validation": {
          "type": "object",
          "description": "Pareto-lang validation configuration",
          "properties": {
            "syntax_validation": {
              "type": "object",
              "description": "Syntax validation settings",
              "properties": {
                "strict_mode": {
                  "type": "boolean",
                  "description": "Enable strict syntax validation"
                },
                "custom_validators": {
                  "type": "array",
                  "description": "Custom syntax validators",
                  "items": {
                    "type": "string",
                    "description": "Validator function name"
                  }
                }
              }
            },
            
            "semantic_validation": {
              "type": "object",
              "description": "Semantic validation settings",
              "properties": {
                "context_awareness": {
                  "type": "boolean",
                  "description": "Enable context-aware validation"
                },
                "domain_rules": {
                  "type": "object",
                  "description": "Domain-specific validation rules",
                  "patternProperties": {
                    "^[a-zA-Z][a-zA-Z0-9_]*$": {
                      "type": "object",
                      "description": "Domain rule"
                    }
                  }
                }
              }
            },
            
            "performance_validation": {
              "type": "object",
              "description": "Performance validation settings",
              "properties": {
                "complexity_threshold": {
                  "type": "string",
                  "enum": ["O(1)", "O(n)", "O(n log n)", "O(n^2)"],
                  "description": "Maximum allowed complexity"
                },
                "timeout_threshold": {
                  "type": "number",
                  "minimum": 0,
                  "description": "Maximum execution time threshold"
                }
              }
            }
          }
        }
      }
    }
  },
  
  "required": ["paretoOperations"],
  
  "additionalProperties": false,
  
  "examples": [
    {
      "paretoOperations": {
        "version": "1.0.0",
        "syntax_version": "1.0",
        "operation_categories": {
          "information_management": {
            "description": "Extract, filter, prioritize, and group information",
            "operations": ["extract", "filter", "prioritize", "group"],
            "xml_tags": ["<xml:extract>", "<xml:filter>", "<xml:prioritize>", "<xml:group>"]
          }
        },
        "operations": {
          "/extract.key_points": {
            "operation_name": "Extract Key Points",
            "category": "information_management",
            "syntax": "/extract.key_points{from=document, max_points=7, method=semantic_clustering}",
            "parameters": {
              "from": {
                "type": "string",
                "description": "Source document",
                "required": true
              },
              "max_points": {
                "type": "integer",
                "description": "Maximum number of key points",
                "required": false,
                "default": 5,
                "validation": {
                  "min": 1,
                  "max": 20
                }
              },
              "method": {
                "type": "string",
                "description": "Extraction method",
                "required": false,
                "default": "semantic_clustering",
                "enum": ["semantic_clustering", "frequency_analysis", "position_based"]
              }
            },
            "examples": [
              {
                "description": "Extract key points from research paper",
                "syntax": "/extract.key_points{from=research_paper, max_points=7, method=semantic_clustering}",
                "context": "Academic document analysis"
              }
            ],
            "performance": {
              "complexity": "O(n)",
              "parallelizable": true,
              "quantum_ready": true
            },
            "integration": {
              "xml_transformation": true,
              "baml_prompting": true,
              "symbolic_residue": false
            }
          }
        },
        "/analyze.field": {
          "operation_name": "Analyze Field",
          "category": "field_operations",
          "syntax": "/analyze.field{content=document, depth=comprehensive, focus=[main_arguments, evidence]}",
          "parameters": {
            "content": {
              "type": "string",
              "description": "Content to analyze",
              "required": true
            },
            "depth": {
              "type": "string",
              "description": "Analysis depth",
              "required": false,
              "default": "standard",
              "enum": ["shallow", "standard", "comprehensive", "deep"]
            },
            "focus": {
              "type": "array",
              "description": "Areas to focus on",
              "required": false,
              "items": {
                "type": "string"
              }
            }
          }
        }
      },
      "execution": {
        "engine": {
          "type": "native",
          "version": "1.0.0",
          "configuration": {
            "optimization_level": "advanced",
            "parallel_execution": true
          }
        },
        "mode": "adaptive",
        "optimization": {
          "operation_ordering": "dependency_optimized",
          "quantum_optimization": {
            "superposition_enabled": true,
            "entanglement_depth": 3
          }
        }
      }
    }
  ]
}